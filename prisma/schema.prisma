generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email String @unique
    password String
    name String
    comments Comment[]
    addedCamps Campground[]
}

model Comment {
    id Int @id @default(autoincrement())
    text String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user User @relation(fields: [userId], references: [id])
    userId Int
}

model Campground {
    id Int @id @default(autoincrement())
    name String 
    image String 
    description String
    location String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    addedBy User @relation(fields: [userId], references: [id])
    userId Int
} 