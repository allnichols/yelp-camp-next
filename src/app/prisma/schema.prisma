//  Prisma Scheme File

generator client {
    provider = "prism-client-js"
}

datasource db {
    provider = "postgresql"
    url     = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

model User {
    id Int @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email String @unique
    password String
    name String
    
}

model Campground {
    id Int @id @default(autoincrement())
    name String 
    image String 
    description String
    location String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Comment {
    id Int @id @default(autoincrement())
    text String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}   

